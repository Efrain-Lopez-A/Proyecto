<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CB7116"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:srcCompat="@drawable/main_logo" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/main_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp">

            <Button
                android:id="@+id/btnComenzar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/main_button"
                android:fontFamily="casual"
                android:onClick="OnClickComenzar"
                android:text="@string/continue_es"
                android:textColor="@android:color/white"
                android:textSize="26sp" />

            <Button
                android:id="@+id/btnNuevo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/main_button"
                android:fontFamily="casual"
                android:onClick="OnClickSecun"
                android:text="@string/new_game_es"
                android:textColor="@android:color/white"
                android:textSize="26sp" />

            <Button
                android:id="@+id/btnSalir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/main_button"
                android:fontFamily="casual"
                android:onClick="OnClickSalir"
                android:text="@string/exit_es"
                android:textColor="@android:color/white"
                android:textSize="26sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>